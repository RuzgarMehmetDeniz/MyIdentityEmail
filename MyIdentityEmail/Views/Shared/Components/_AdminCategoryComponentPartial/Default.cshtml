@model List<Category>

<!-- FontAwesome CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />

<style>
    /* Renkli ikonlar */
    .icon-sikayet {
        color: #e74c3c;
    }
    /* kırmızı */
    .icon-destek {
        color: #3498db;
    }
    /* mavi */
    .icon-oneri {
        color: #f1c40f;
    }
    /* sarı */
    .icon-bilgi {
        color: #2ecc71;
    }
    /* yeşil */
    .icon-teknik {
        color: #e67e22;
    }
    /* turuncu */
    .icon-isbirligi {
        color: #9b59b6;
    }
    /* mor */
    .icon-diger {
        color: #7f8c8d;
    }
    /* gri */

    .sidebar-section {
        margin: 1rem 0;
    }

    .sidebar-title {
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .sidebar-item {
        padding: 0.4rem 0;
    }

    .label-item span:first-child {
        margin-right: 0.6rem;
    }
</style>

<div class="sidebar-section">
    <div class="sidebar-title">Kategoriler</div>

    @foreach (var item in Model)
    {
        <div class="sidebar-item">
            <div class="label-item">
                <span class="@item.CategoryIcon @GetColorClass(item.CategoryName)"></span>
                <span>@item.CategoryName</span>
            </div>
        </div>
    }
</div>

@functions {
    private string GetColorClass(string categoryName)
    {
        return categoryName?.ToLower() switch
        {
            "şikayet" => "icon-sikayet",
            "destek" => "icon-destek",
            "öneri" => "icon-oneri",
            "bilgi talebi" => "icon-bilgi",
            "teknik sorun" => "icon-teknik",
            "iş birliği" => "icon-isbirligi",
            "diğer" => "icon-diger",
            _ => "icon-diger"
        };
    }
}
