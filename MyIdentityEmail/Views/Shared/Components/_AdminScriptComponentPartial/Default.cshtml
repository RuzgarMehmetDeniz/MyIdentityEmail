<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		background-color: #f5f5f5;
	}

	/* Header */
	.header {
		background-color: white;
		padding: 12px 20px;
		display: flex;
		align-items: center;
		justify-content: space-between;
		border-bottom: 1px solid #e0e0e0;
	}

	.header-left {
		display: flex;
		align-items: center;
		gap: 20px;
	}

	.logo {
		font-size: 20px;
		font-weight: 600;
		color: #333;
	}

	.search-icon {
		font-size: 20px;
		color: #666;
		cursor: pointer;
	}

	.header-right {
		display: flex;
		align-items: center;
		gap: 20px;
	}

	.user-info {
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.user-name {
		color: #666;
		font-size: 14px;
	}

	.user-avatar {
		width: 36px;
		height: 36px;
		border-radius: 50%;
		background-color: #ddd;
	}

	.notification-badge {
		position: relative;
	}

		.notification-badge::after {
			content: '1';
			position: absolute;
			top: -5px;
			right: -5px;
			background-color: #ff6b35;
			color: white;
			font-size: 10px;
			padding: 2px 5px;
			border-radius: 10px;
		}

	/* Main Container */
	.container {
		display: flex;
		height: calc(100vh - 60px);
	}

	/* Sidebar */
	.sidebar {
		width: 200px;
		background-color: white;
		border-right: 1px solid #e0e0e0;
		padding: 20px 0;
	}

	.compose-btn {
		background-color: #ff6b35;
		color: white;
		border: none;
		padding: 12px 24px;
		margin: 0 20px 20px;
		border-radius: 4px;
		cursor: pointer;
		font-size: 14px;
		font-weight: 500;
		width: calc(100% - 40px);
	}

	.sidebar-section {
		margin-bottom: 30px;
	}

	.sidebar-title {
		padding: 0 20px;
		font-size: 12px;
		color: #999;
		margin-bottom: 10px;
		text-transform: uppercase;
	}

	.sidebar-item {
		padding: 10px 20px;
		display: flex;
		align-items: center;
		justify-content: space-between;
		cursor: pointer;
		color: #666;
		font-size: 14px;
	}

		.sidebar-item:hover {
			background-color: #f5f5f5;
		}

		.sidebar-item.active {
			background-color: #f5f5f5;
			color: #333;
			font-weight: 500;
		}

	.item-left {
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.badge {
		background-color: #4caf50;
		color: white;
		padding: 2px 8px;
		border-radius: 10px;
		font-size: 12px;
	}

	.label-item {
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.label-dot {
		width: 10px;
		height: 10px;
		border-radius: 50%;
	}

	.label-work {
		background-color: #ff6b35;
	}

	.label-business {
		background-color: #2196f3;
	}

	.label-family {
		background-color: #ffc107;
	}

	.label-friends {
		background-color: #00bcd4;
	}

	/* Main Content */
	.main-content {
		flex: 1;
		background-color: white;
		display: flex;
		flex-direction: column;
	}

	.page-header {
		padding: 20px;
		border-bottom: 1px solid #e0e0e0;
	}

	.breadcrumb {
		font-size: 12px;
		color: #999;
		margin-bottom: 5px;
	}

	.page-title {
		font-size: 24px;
		font-weight: 600;
		color: #333;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.page-actions {
		display: flex;
		gap: 10px;
	}

	.icon-btn {
		background: none;
		border: none;
		color: #666;
		cursor: pointer;
		font-size: 18px;
		padding: 5px;
	}

	/* Toolbar */
	.toolbar {
		padding: 15px 20px;
		border-bottom: 1px solid #e0e0e0;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.toolbar-left {
		display: flex;
		gap: 10px;
		align-items: center;
	}

	.checkbox {
		width: 18px;
		height: 18px;
		cursor: pointer;
	}

	.filter-btn {
		padding: 6px 12px;
		border: 1px solid #ddd;
		background: white;
		cursor: pointer;
		border-radius: 4px;
		font-size: 14px;
	}

	.nav-arrows {
		display: flex;
		gap: 5px;
	}

	.nav-btn {
		background-color: #00bcd4;
		color: white;
		border: none;
		padding: 8px 12px;
		cursor: pointer;
		font-size: 14px;
	}

	/* Email List */
	.email-list {
		flex: 1;
		overflow-y: auto;
	}

	.email-item {
		padding: 15px 20px;
		border-bottom: 1px solid #f0f0f0;
		display: flex;
		align-items: center;
		gap: 15px;
		cursor: pointer;
		transition: background-color 0.2s;
	}

		.email-item:hover {
			background-color: #f9f9f9;
		}

	.email-checkbox {
		width: 18px;
		height: 18px;
	}

	.star-icon {
		color: #ddd;
		font-size: 18px;
		cursor: pointer;
	}

		.star-icon:hover {
			color: #ffc107;
		}

	.sender-avatar {
		width: 36px;
		height: 36px;
		border-radius: 50%;
		background-color: #ddd;
	}

	.email-content {
		flex: 1;
		display: flex;
		align-items: center;
		gap: 15px;
	}

	.sender-name {
		min-width: 150px;
		font-weight: 500;
		color: #333;
	}

	.email-label {
		padding: 3px 10px;
		border-radius: 3px;
		font-size: 11px;
		font-weight: 500;
	}

	.label-work-tag {
		background-color: #fff3e0;
		color: #ff6b35;
	}

	.label-business-tag {
		background-color: #e3f2fd;
		color: #2196f3;
	}

	.label-friend-tag {
		background-color: #fff9e0;
		color: #ffc107;
	}

	.email-subject {
		flex: 1;
		color: #666;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
	}

	.email-meta {
		display: flex;
		align-items: center;
		gap: 15px;
	}

	.attachment-icon {
		color: #999;
		font-size: 16px;
	}

	.email-time {
		color: #999;
		font-size: 13px;
		min-width: 80px;
		text-align: right;
	}

	.settings-icon {
		color: #ff4081;
		font-size: 20px;
	}
</style>
